{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "rasa run --enable-api --cors \"*\" --port $PORT --model models/20251209-180056-bright-face.tar.gz",
    "sleepApplication": false,
    "useLegacyStacker": false,
    "multiRegionConfig": {
      "asia-southeast1-eqsg3a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}